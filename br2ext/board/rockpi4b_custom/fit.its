/*
 * Simple U-Boot uImage source file containing a single kernel and FDT blob
 */

/dts-v1/;

/ {
	description = "Simple image with single Linux kernel and FDT blob";
	#address-cells = <1>;

	images {
		kernel {
			description = "Vanilla Linux kernel";
			data = /incbin/("./Image");
			type = "kernel";
			arch = "ARM64";
			compression = "none";
			os = "linux";
			load =  <0x02080000>;
			entry = <0x02080000>;
			hash-1 {
				algo = "sha1";
			};
		};
		fdt-1 {
			description = "Flattened Device Tree blob";
			data = /incbin/("./rockpi4b_custom.dtb");
			type = "flat_dt";
			arch = "ARM64";
			compression = "none";
			load = <0x01f00000>;
			hash-1 {
				algo = "sha1";
			};
		};
		ramdisk-1 {
			description = "Ramdisk image";
			data = /incbin/("./rootfs.cpio.gz");
			arch = "ARM64";
			compression = "none";
			os = "linux";
			type = "ramdisk";
			load = <0x06000000>;
			hash-1 {
				algo = "sha1";
			};
		};
	};

	configurations {
		default = "conf-1";
		conf-1 {
			description = "Boot Linux kernel with FDT blob and ramdisk";
			kernel = "kernel";
			fdt = "fdt-1";
			ramdisk = "ramdisk-1";
		};
	};
};
